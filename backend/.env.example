# 服务器端口 (默认: 19198)
PORT=19198
NODE_ENV=development

# 时区设置 (Asia/Shanghai = UTC+8)
TZ=Asia/Shanghai

# 数据库文件路径 (相对于项目根目录)
# 默认: database/azothpath.db
DB_PATH=database/azothpath.db

# JWT 密钥 (必需) - 用于用户认证
# 生产环境请使用强密钥，建议长度 >= 32 字符
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters

# 日志级别: 0 (ERROR) | 1 (WARN) | 2 (INFO) | 3 (DATABASE) | 4 (API) | 5 (INFO) | 6 (DEBUG)
# 默认: 2 (INFO)
LOG_LEVEL=2

# 慢查询阈值 (毫秒)
# 默认: 100
# 说明: SQL 执行时间超过此值会输出 WARN 级别日志
SLOW_QUERY_MS=100

# 配方验证 API 地址
# 默认: https://hc.tsdo.in/api
VALIDATION_API_URL=https://hc.tsdo.in/api

# API 请求超时时间 (毫秒)
# 默认: 5000
API_TIMEOUT=5000

# API 请求重试次数
# 默认: 3
API_RETRY_COUNT=3

# API 请求限速间隔 (毫秒)
# 用于防止触发外部 API 限速，确保请求间隔不低于此值
# 默认: 800 (0.8秒)
# 建议范围: 500-2000
# 说明: 值越大越安全，但导入速度越慢
API_RATE_LIMIT_INTERVAL=800

# ==================== 数据库备份配置 ====================

# 是否启用自动备份
# 默认: true
DB_BACKUP_ENABLED=true

# 自动备份间隔（小时）
# 默认: 2（每2小时备份一次）
DB_BACKUP_INTERVAL_HOURS=2

# 备份文件保存目录（相对于项目根目录）
# 默认: database/backups
DB_BACKUP_DIR=database/backups

# 最多保留的备份文件数量
# 默认: 24（每2小时备份，保留24个即48小时/2天的数据）
# 超过此数量会自动删除最旧的备份
DB_BACKUP_MAX_COUNT=24
